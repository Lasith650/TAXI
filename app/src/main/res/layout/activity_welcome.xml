<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/login"
    tools:context="com.example.user.taxii.WelcomeActivity">

    <Button
        android:id="@+id/welcome_driver_btn"
        android:layout_width="250dp"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="202dp"
        android:background="@android:color/background_dark"
        android:text="I'm a Driver"
        android:textColor="@android:color/background_light"
        android:textSize="18sp" />

    <Button
        android:id="@+id/welcome_customer_btn"
        android:layout_width="250dp"
        android:layout_height="60dp"
        android:layout_alignTop="@+id/welcome_driver_btn"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="91dp"
        android:background="?android:attr/colorAccent"
        android:text="I'm a Customer"
        android:textColor="@color/common_google_signin_btn_text_dark_focused"
        android:textSize="18sp" />
</RelativeLayout>
